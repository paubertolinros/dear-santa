<div class="main-title-all-presents-container">
  <p> Find gåva by recipient</p>
  <form class="form-box" method="GET" action="/presents/search">
    <label>Recipient</label>
    <input type="text" name="recipient" placeholder="Recipient name" required />
    <div class="form-button">
      <button type="submit">Search</button>
    </div>
    </form>
  <h2 class = "main-title-all-presents"> Your gåva! </h2>
</div>
<div class="all-presents-container">
  {{#each presents}}
  <div class="a-present-card">
    {{> cardPresents this}}
    <div class="buttons-present-card">
      <button class="present-card-button"><a href="/presents/{{id}}"><i class="fa-solid fa-plus"></i></a></button>
      <button class="present-card-button"><a href="/presents/delete/{{id}}"><i class="fa-regular fa-trash-can"></i></a></button>
    </div>
  </div>
  {{/each}}
</div>